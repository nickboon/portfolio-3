{
	"name": "portfolio-3",
	"version": "1.0.0",
	"scripts": {
		"clean": "rimraf ./built/ ./md/ ./public/",
		"load:content": "node src/loadContent",
		"load:content:example": "node src/loadContent ../example/portfolio.config",
		"generate:svelte": "node src/mdToSvelte/mdToSvelte.js",
		"prettify:svelte": "prettier --write \"built\\*.svelte\"",
		"prebuild": "run-s clean load:content generate:svelte prettify:svelte",
		"build": "rollup -c",
		"autobuild": "rollup -c -w",
		"dev": "npm run prebuild && run-p start:dev autobuild",
		"start": "sirv public",
		"start:dev": "sirv public --dev",
		"deploy:neocities": "neocities-deploy --source public --dest public/v3 --ignore *.map --ignore *.js",
		"example": "run-s clean load:content:example generate:svelte prettify:svelte && run-p start:dev autobuild",
		"write:config": "echo {\"content\": {\"md\": \"../path/to/content/md\",\"public\": \"../path/to/content/public\"}} > portfolio.config.json"
	},
	"author": "boonnick@hotmail.com",
	"license": "ISC",
	"dependencies": {
		"fs-extra": "^8.1.0",
		"neocities-deploy": "^1.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"prettier-plugin-svelte": "^0.7.0",
		"rollup": "^1.10.1",
		"rollup-plugin-commonjs": "^9.3.4",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-livereload": "^1.0.0",
		"rollup-plugin-node-resolve": "^4.2.3",
		"rollup-plugin-svelte": "^5.0.3",
		"rollup-plugin-svelte-static-html": "^0.1.0",
		"rollup-plugin-terser": "^5.1.3",
		"showdown": "^1.9.1",
		"sirv-cli": "^0.4.0",
		"svelte": "^3.0.0"
	}
}
