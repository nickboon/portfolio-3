{
	"name": "portfolio-3",
	"version": "1.0.0",
	"scripts": {
		"clean:svelte": "rimraf ./built/",
		"generate:svelte": "node src/mdToSvelte/mdToSvelte.js ../portfolio-content/md/",
		"prettify:svelte": "prettier --write \"built\\*.svelte\"",
		"build:svelte": "run-s clean:svelte generate:svelte prettify:svelte",
		"prebuild": "node src/prebuild.js \"Nick Boon\"",
		"build": "rollup -c",
		"preautobuild": "npm run prebuild",
		"autobuild": "rollup -c -w",
		"dev": "npm run build:svelte && run-p start:dev autobuild",
		"start": "sirv public",
		"start:dev": "sirv public --dev"
	},
	"author": "boonnick@hotmail.com",
	"license": "ISC",
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"prettier-plugin-svelte": "^0.7.0",
		"rollup": "^1.10.1",
		"rollup-plugin-commonjs": "^9.3.4",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-livereload": "^1.0.0",
		"rollup-plugin-node-resolve": "^4.2.3",
		"rollup-plugin-svelte": "^5.0.3",
		"rollup-plugin-svelte-static-html": "^0.1.0",
		"rollup-plugin-terser": "^5.1.3",
		"showdown": "^1.9.1",
		"sirv-cli": "^0.4.0",
		"svelte": "^3.0.0"
	}
}
